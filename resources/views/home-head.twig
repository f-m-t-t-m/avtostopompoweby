{% extends 'layouts/base.twig' %}

{% set scope = {
    department_groups: department_groups,
    subjects: subjects,
    teachers: teachers,
    groups: groups,
    department_id: department_id,
} %}

{% block main %}
    <div class="MiddleBlock DividerBlock">
        <div class="ContentContainer">
            {% include 'components/group-list.twig' with{
                items: scope.department_groups,
                id: scope.department_id,
            } %}
        </div>
        <div class="ContentContainer">
            {% include 'components/subject-table.twig' with{
                subjects: scope.subjects,
                teachers: scope.teachers,
                groups: scope.groups,
                showGroup: true,
                showTeacher: true,
            } %}
        </div>
    </div>
{% endblock %}

