{% import _self as macros %}

{% macro content() %}
    <div id="create_section" data-uk-modal>
        <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title">Создать раздел</h2>
            <button type="button" class="uk-modal-close-default" data-uk-close></button>
            <form method="POST" action="{{ route('store_section') }}" class="SectionForm">
                {{ csrf_field() }}
                <input id="discipline_id" type="hidden" name="discipline_id" value=""/>
                <label for="" class="SectionFrom__title ">
                    Название раздела:
                </label>
                <input id="section_name" type="text" class="SectionForm__input" name="name">
                {% if errors.first('name') %}
                    <p>{{ errors.first('name') }}</p>
                {% endif %}
                <label for="" class="SectionForm__title">
                    Текст:
                </label>
                <textarea name="text" id="section_text" class="SectionForm__textarea"></textarea>
                {% if errors.first('text') %}
                    <p>{{ errors.first('text') }}</p>
                {% endif %}
                <button class="Button Button--primary Form__button" type="submit">
                    Создать раздел
                </button>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        discipline_id = document.getElementById("discipline_id")
        discipline_id.value = id;
    </script>
{% endmacro %}

{{ macros.content() }}
