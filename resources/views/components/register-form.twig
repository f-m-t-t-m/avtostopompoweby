{% import _self as macros %}

{% macro content() %}
    <div class="CenteredBlock">
        <div class="Form">
            <div class="Form__header">
                Регистрация
            </div>
            
            <label class="Form__label" for="name">Имя:</label>
            <input class="Form__field" type="text" id="name" name="name">
            
            <label class="Form__label" for="surname">Фамилия:</label>
            <input class="Form__field" type="text" id="surname" name="surname">
            
            <label class="Form__label" for="role">Роль в системе:</label>
            <select class="Form__field" id="role" name="role">
                <option value="none">--выберите роль--</option>
                <option value="student">Студент</option>
                <option value="teacher">Преподаватель</option>
                <option value="head">Зав. кафедрой</option>
            </select>
            
            <label class="Form__label" for="group">Учебная группа:</label>
            <select class="Form__field" id="group" name="group">
                <option value="none">--выберите группу--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
            
            <label class="Form__label" for="email">Email:</label>
            <input class="Form__field" type="text" id="email" name="email">
            
            <label class="Form__label" for="password">Пароль:</label>
            <input class="Form__field" type="password" id="password" name="password">
            
            <label class="Form__label" for="image">Фото:</label>
            <input class="Form__fileChooser" type="file" id="image" name="image" accept="image/*">
            
            <input class="Form__button" type="submit" id="submit" name="submit" value="Зарегистрироваться">
            <div class="Form__hint">
                Уже есть аккаунт? <a href="login">Войти</a>
            </div>
        </div>
    </div>
{% endmacro %}

{{ macros.content() }}